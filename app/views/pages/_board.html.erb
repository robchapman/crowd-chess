<div class="d-flex justify-content-center align-items-center">
  <div class="board-container">
  <% board.each do |row| %>
      <% row.each do |element|%>
        <% if element.is_a? Space %>
        <div class="board-space board-<%= element.team.colour %> js-game-space" data-row=<%= element.row %> data-column=<%= element.column%> data-piece=<%= element&.piece&.id %>>
          <% unless element.piece.nil? %>
            <i class="fas fa-chess-<%= element.piece.type.downcase %> piece-<%= element.piece.team.colour %>" ></i>
          <% end %>
        </div>
        <% else %>
        <div class="board-space board-label">
          <h2> <%= element %> </h2>
        </div>
        <% end %>
      <% end %>
  <% end %>
  </div>
</div>

